{
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "test"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,                                
    "baseUrl": ".",
    "paths":{
      "*": ["src/*"],
      "test/*": ["test/*"]
    }
  }
}
